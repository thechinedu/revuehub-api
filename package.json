{
  "name": "revuehub-api",
  "private": true,
  "version": "1.0.0",
  "description": "RevueHub - Review github repositories without the need for pull requests",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "yarn nest start --watch",
    "start:debug": "yarn nest start --debug --watch",
    "start:prod": "node src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "jest": "DOTENV_CONFIG_PATH=.env.test node -r dotenv/config ./node_modules/.bin/jest",
    "test": "yarn jest -i --forceExit",
    "test:watch": "yarn jest --watch",
    "test:cov": "yarn jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "migrate:create": "yarn knex migrate:make $1 -x ts",
    "migrate:latest": "yarn knex migrate:latest",
    "migrate:up": "yarn knex migrate:up",
    "migrate:down": "yarn knex migrate:down",
    "migrate:rollback": "yarn knex migrate:rollback",
    "seed:make": "yarn knex seed:make $1 -x ts",
    "seed:run": "yarn knex seed:run",
    "setup": "docker compose -f docker-compose.dev.yml up "
  },
  "dependencies": {
    "@nestjs/bull": "^0.6.3",
    "@nestjs/cli": "^9.2.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.3",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/platform-express": "^9.4.1",
    "@octokit/auth-oauth-app": "^5.0.5",
    "@octokit/request": "^6.2.3",
    "argon2": "^0.30.3",
    "bull": "^4.10.4",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "joi": "^17.9.2",
    "knex": "^2.4.2",
    "pg": "^8.11.0",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.2",
    "rxjs": "^7.8.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/bull": "^4.10.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^27.0.2",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.15.11",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "@types/zxcvbn": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fishery": "^2.2.2",
    "jest": "^27.3.0",
    "prettier": "^2.8.4",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    }
  },
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=1.22.19"
  }
}
