{
  "name": "revuehub-api",
  "private": true,
  "version": "1.0.0",
  "description": "RevueHub - Review github repositories without the need for pull requests",
  "license": "MIT",
  "scripts": {
    "nest": "node -r dotenv/config ./node_modules/.bin/nest",
    "prebuild": "rimraf dist",
    "build": "yarn nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn nest start",
    "start:dev": "yarn nest start --watch",
    "start:debug": "yarn nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:test-server": "DOTENV_CONFIG_PATH=.env.test yarn start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "jest": "DOTENV_CONFIG_PATH=.env.test node -r dotenv/config ./node_modules/.bin/jest",
    "test": "yarn jest --forceExit",
    "test:watch": "yarn jest --watch",
    "test:cov": "yarn jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "knex": "node -r dotenv/config ./node_modules/.bin/knex",
    "migrate:create": "yarn knex migrate:make $1 -x ts",
    "migrate:latest": "yarn knex migrate:latest",
    "migrate:up": "yarn knex migrate:up",
    "migrate:down": "yarn knex migrate:down",
    "migrate:rollback": "yarn knex migrate:rollback",
    "migrate:latest:test": "DOTENV_CONFIG_PATH=.env.test yarn knex migrate:latest",
    "migrate:rollback:test": "DOTENV_CONFIG_PATH=.env.test yarn knex migrate:rollback"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.6",
    "@nestjs/core": "^9.1.4",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/platform-express": "^9.1.6",
    "@octokit/auth-oauth-app": "^5.0.4",
    "@octokit/request": "^6.2.2",
    "argon2": "^0.30.1",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "joi": "^17.6.2",
    "knex": "^2.3.0",
    "pg": "^8.8.0",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.4",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^27.0.2",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.11.3",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "@types/zxcvbn": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.3.0",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    }
  }
}
